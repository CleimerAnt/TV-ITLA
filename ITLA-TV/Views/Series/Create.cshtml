@model Application.ViewModel.PostAndEditViewModel.SeriesPostAndEditViewModel
@{
    ViewData["Title"] = "Presentacion";
    var generos = ViewBag.generos as List<Application.ViewModel.GenerosViewModel>;
    var productoras = ViewBag.productoras as List<Application.ViewModel.ProductoraViewModel>;


    bool editMode = Model.Id == 0 ? false : true;
   
}



<section class="formulario d-flex justify-content-center">
   
    <form class="formulario__serie asp-controller=" Series" asp-action="@(editMode ? "Editar" : "Create")" method="post">
        <h2 class="mb-3 font-weight-bold text-center">@(editMode ? "Editar Serie" : "Crear Serie")</h2>
        <div class="form-group mb-3">
            <label asp-for="NombreSerie" class="mb-1 font-weight-bold" for="">Nombre Serie</label>
            <input asp-for="NombreSerie" type="text" class="form-control mb-3">
            <span asp-validation-for="NombreSerie"></span>
        </div>
        <div class="form-group">
            <label asp-for="ImagenPortada" class="mb-1 font-weight-bold" for="">Imagen de Portada</label>
            <input asp-for="ImagenPortada" type="text" class="form-control mb-3 ">
            <span asp-validation-for="ImagenPortada"></span>
        </div>
        <div class="form-group">
            <label asp-for="EnlaceVideo" class="mb-1 font-weight-bold" for="">Enlace del Video</label>
            <input asp-for="EnlaceVideo" type="text" class="form-control mb-3">
            <span asp-validation-for="EnlaceVideo"></span>
        </div>
        <div class="form-group">
            <label class="mb-1 font-weight-bold" for="">Productoras</label>

            <select asp-for="ProductoraID" class="form-control mb-3" style="color: black;" id="productora" >
                <option value="0">--Selecciona--</option>
                @foreach (var productora in productoras)
                {
                 
                    <option value="@productora.Id">
                        @productora.NombreProductora
                    </option>
                }
            </select>
            <span asp-validation-for="ProductoraID"></span>
          
        </div>
        <div class="form-group">
            <label class="mb-1 font-weight-bold" for="">Generos</label>
            <select asp-for="GeneroId" class="form-control" style="color: black;" id="genero">
                <option value="0">--Selecciona--</option>
                @foreach (var genero in generos)
                {
                  
                    <option value="@genero.Id">@genero.NombreGenero</option>

                }
            </select>
            <span asp-validation-for="GeneroId"></span>
        </div>

        <div class="form-group">
            <label class="mb-1 font-weight-bold" for="">Generos</label>
            <select asp-for="GeneroSecundarioId" class="form-control" style="color: black;" id="genero">
                <option value="0" >--Selecciona--</option>
                @foreach (var genero in generos)
                {
                   
                    <option value="@genero.Id">@genero.NombreGenero</option>

                }
            </select>
            <span asp-validation-for="GeneroSecundarioId"></span>
        </div>

        <div class="d-flex  justify-content-end align-items-end">
            <a asp-controller="Series" asp-action="Acciones" class="btn btn-secondary m-1 mt-3 font-weight-bold  w-25">Cancelar</a>
            <button type="submit" class="btn btn-primary m-1 w-25 mt-3  font-weight-bold">Enviar</button>
        </div>
       
    </form>
</section>