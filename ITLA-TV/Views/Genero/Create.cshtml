@model Application.ViewModel.PostAndEditViewModel.GeneroPostAnEditViewModel
@{
    ViewData["Title"] = "Index";
    bool editMode = Model.Id == 0 ? false : true;
}

<section class="formulario d-flex justify-content-center" style="margin-bottom:300px ;">
    <form class="formulario__serie" asp-controller="Genero" asp-action="@(editMode ? "Editar" : "Create")" method="post">
        <h2 class="mb-3 font-weight-bold text-center">@(editMode ? "Editar Genero" : "Crear Genero")</h2>
        <div class="form-group mb-3">
            <label asp-for="NombreGenero" class="mb-1 font-weight-bold" for="">Nombre Genero</label>
            <input asp-for="NombreGenero" type="text" class="form-control mb-3">
            <span asp-validation-for="NombreGenero"></span>
        </div>

        <div class="d-flex  justify-content-end align-items-end">
            <a asp-controller="Genero" asp-action="Acciones" class="btn btn-secondary m-1 mt-3 font-weight-bold  w-25">Cancelar</a>
            <button type="submit" class="btn btn-primary m-1 w-25 mt-3  font-weight-bold">Enviar</button>
        </div>
    </form>
</section>


